<%= form_with(model: reservation) do |form| %>
  <% if reservation.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

      <ul>
        <% reservation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :reservation_date %>
    <%= form.text_field :reservation_date, class: 'flatpickr', data: { enable_time: false } %>
  </div>

  <!-- Keep the time selection as it is -->
  <div class="field">
    <%= form.label :reservation_time, style: "display: block" %>
    <%= form.datetime_field :reservation_time %>
  </div>

  <!-- This should be Inactive -->
  <div>
    <%= form.label :inactive, style: "display: block" %>
    <%= form.check_box :inactive %>
  </div>

  <div>
    <%= form.submit %>
  </div>

  <script type="text/javascript">
  flatpickr('.flatpickr', {
    dateFormat: "Y-m-d",
    // Add any other options as needed
  });
  </script>

<% end %>
